<header>
  <nav class="nav-wrapper transparent">
    <div class="container">
      <img class="responsive-img brand-logo center" id="logo" src="/images/RL-circle_logo.gif"/>
    </div>
  </nav>
</header>

<section class="section container">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
          <li class="tab col s4">
            <a href="#tasks" class="grey darken-4 blue-text text-accent-3">Tasks</a>
          </li>
          <li class="tab col s4">
            <a href="#events" class="grey darken-4 blue-text text-accent-3">Events</a>
          </li>
          <li class="tab col s4">
            <a href="#notes" class="grey darken-4 blue-text text-accent-3">Notes</a>
          </li>
        </ul>
        <div class="col s12 l8 offset-l2">
          <div class="card" id="tasks">
            <div class="card-content grey darken-3 white-text">
              <span class="card-title">Tasks</span>
              <p></p>
            </div>
          </div>
        </div>
        <div class="col s12 l8 offset-l2">
          <div class="card" id="events">
            <div class="card-content grey darken-3 white-text">
              <span class="card-title">Events</span>
              <p></p>
            </div>
          </div>
        </div>
        <div class="col s12 l8 offset-l2">
          <div class="card" id="notes">
            <div class="card-content grey darken-3 white-text">
              <span class="card-title">Notes</span>
              <p></p>
            </div>
          </div>
        </div>
    </div>
  </div>
</section>
<section class="section container">
  <div class="row">
    <div class="col l3 s6 offset-s3">
      <div class="card grey darken-3" id="hotkeys">
        <div class="card-content white-text">
          <span class="card-title">Hot Keys</span>
          <ul>
            <li>Task: ctrl + , = <span class="left-align">●</span></li>
            <li>Event: ctrl + . = <span class="left-align">○</span></li>
            <li>Note: ctrl + / = <span class="left-align">▷</span></li>
        </div>
      </div>
    </div>
    <div class="col s8 l6 offset-s2">
      <form>
        <div class="input-field">
          <i class="material-icons prefix">logs</i>
              <textarea id="message" class="materialize-textarea"></textarea>
              <label for="message">Your Logs</label>
        </div>
      </form>
      <a class="waves-effect waves-light btn blue accent-3 right" id="add">Add to Logs</a>
    </div>
  </div>
</section>


<!-- Compiled and minified JavaScript -->
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="/js/editor.js"></script>
<script>
    $(document).ready(function() {
        $(".tabs").tabs()
    })
</script>
